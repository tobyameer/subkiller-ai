{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist-server",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "lib": ["ES2022"],
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/server.ts",
    "src/config/**/*.ts",
    "src/controllers/**/*.ts",
    "src/routes/**/*.ts",
    "src/services/**/*.ts",
    "src/models/**/*.ts",
    "src/middleware/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": ["src/**/*.tsx", "src/lib/**/*", "src/store/**/*", "src/types.ts"]
}
